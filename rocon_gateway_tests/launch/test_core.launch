<launch>

  <!-- Hackish way of launching a roscore instance on a given port -->
  <!-- This is useful in roslaunch, as roslaunch itself no capabilities of launching multiple roscores -->
  <arg name="port"/>
  <node name="$(anon test_core)" pkg="rocon_gateway_tests" type="roscore" args="--port=$(arg port)">
    <env name="ROS_MASTER_URI" value="http://localhost:$(arg port)" />
  </node>

</launch>

