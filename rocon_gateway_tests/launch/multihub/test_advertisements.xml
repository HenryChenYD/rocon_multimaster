<!--
  Launches a ros system suitable for testing advertisements
-->
<launch>
  <include file="$(find rocon_gateway_tests)/launch/multihub/multihub_gateway.xml"/>
  <node pkg="roscpp_tutorials" type="talker" name="talker"/>
  <node pkg="roscpp_tutorials" type="listener" name="listener"/>
  <test test-name="test_advertisements" pkg="rocon_gateway_tests" type="test_advertisements.py"/>
</launch>
